local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Configuração da interface
local Window = Rayfield:CreateWindow({
    Name = "Oryh Hub | Universal BR | Animal Simulator", 
    LoadingTitle = "Carregando Animal Simulator",
    LoadingSubtitle = "Por favor, aguarde...",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "OryhHubConfigs", -- Pasta para salvar configurações
        FileName = "UniversalScript"
    },
    Discord = {
        Enabled = false,
        Invite = "", -- Adicione um convite do Discord se necessário
        RememberJoins = true
    },
    KeySystem = false -- Sistema de chave desativado
})

-- Função para criar botões que executam scripts
local function AddScriptButton(tab, name, url)
    tab:CreateButton({
        Name = name,
        Callback = function()
            loadstring(game:HttpGet(url))()
            Rayfield:Notify({
                Title = "Oryh Hub",
                Content = name .. " carregado com sucesso!",
                Duration = 5
            })
        end
    })
end

-- >[Início]<

local InicioTab = Window:CreateTab("Início")
AddScriptButton(InicioTab, "Heim Dalls Hub", "https://raw.githubusercontent.com/AWdadwdwad2/net/refs/heads/main/h")
AddScriptButton(InicioTab, "Red Hub", "https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/AnimalSimulator.lua")
AddScriptButton(InicioTab, "Afk Hub", "https://raw.githubusercontent.com/NewWhitelistService/open-source/refs/heads/main/animal%20simulator%20afk%20farm.lua")
AddScriptButton(InicioTab, "Animal Simulator Hub", "https://pastejustit.com/raw/wf4zkzbblb")
AddScriptButton(InicioTab, "Unfrair Hub", "https://raw.githubusercontent.com/rbIxscriptsnet/unfair/main/rblxhub.lua")
AddScriptButton(InicioTab, "Animal Simulator Script Hub", "https://raw.githubusercontent.com/pickles20/Scriptzzz/main/Lua%20Script")
AddScriptButton(InicioTab, "Marckk Hub", "https://raw.githubusercontent.com/Markklol/AnimalSimulator/refs/heads/main/One")
AddScriptButton(InicioTab, "Rip V2 Hub", "https://raw.githubusercontent.com/CasperFlyModz/discord.gg-rips/main/AnimalSimulator.lua")
AddScriptButton(InicioTab, "New Hub", "https://bmacaveli.link/newhub")

-- Mensagem inicial
Rayfield:Notify({
    Title = "Animal Simulator",
    Content = "Carregando scripts...",
    Duration = 5
})
